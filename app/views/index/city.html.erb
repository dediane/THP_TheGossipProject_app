<div class="page">
  <p style="font-size: 22px"><u><b>This is the city of <%= @city.name%></b></u></p><br>
  <p><b>See</b> all gossips from <u><%=@city.name%></u>:<p><br><br>

  <div class="row col text-center">
    <% @gossips.each do |gossip|%>
      <%if gossip.user.city.name == @city.name%>
          <div class="card" style="width:18rem;">
          <h5><%=gossip.title%></h5>
          <%=gossip.user.first_name%><br><br>
          <em><%= link_to "See this gossip", gossip_path(gossip.id)%></em> 
          </div>
      <% end %>
    <% end %>
  </div>

</div>