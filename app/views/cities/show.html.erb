<div class="page">
  <p style="font-size: 22px"><u><b>This is the city of <%= @city.name%></b></u></p><br>
  <p><b>See</b> all gossips from <u><%=@city.name%></u>:<p><br><br>


  <div class="list-group d-flex">
    <% @gossips.each do |gossip|%>
      <%if gossip.user.city.name == @city.name%>
          <div class="list-group-item list-group-item-action mx-auto text-center" style="width:40rem;">
        <h5>
          Title: <%=gossip.title%>
        </h5>
        <p>
          Author: <%=gossip.user.first_name%><br>
        </p>
  
        <p>
          <%= link_to "Edit", edit_gossip_path(gossip.id), :class => "badge badge-success"%>
          <%= link_to "Delete" , gossip_path(gossip.id), :method => "delete", :class => "badge badge-danger", :data => {:confirm => "Do you really want to Delete this gossip?"} %>
        </p>
        <p>
          <em><%= link_to "See this gossip", gossip_path(gossip.id), :class => "btn btn-primary btn-block"%></em>
        </p>
      </div>
      <% end %>
    <% end %>
  </div>
</div>