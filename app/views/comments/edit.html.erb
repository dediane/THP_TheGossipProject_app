<div class="page content col-7">
<h2>Edit the comment:</h2><br>
  <%= form_for [@gossip, @comment] do |form|%>
    <div class="form-group">
    <label> Author </label>
    <%= form.text_field :author, class: "form-control"%>
    <br><br>

    <label> Content </label>
    <%= form.text_field :content, class: "form-control" %>
    <br><br>
    </div>

    <%= submit_tag "Update comment", class: 'btn btn-outline-primary btn-sm' %>
    <%= link_to "Delete", gossip_comment_path(@comment.gossip_id, @comment.id), :method => "delete", :class => "btn btn-danger btn-sm", :data => {:confirm => "Do you really want to Delete this gossip?"} %>
  <% end %>
  
</div>