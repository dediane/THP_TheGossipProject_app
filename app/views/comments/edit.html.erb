<div class="page content text-center">
<h2>Edit the comment:</h2><br>
  <%= form_for [@gossip, @comment] do |form|%>
  
    <label> Author </label>
    <%= form.text_field :author %>
    <br><br>

    <label> Content </label>
    <%= form.text_field :content %>
    <br><br>

    <%= submit_tag "Update comment", class: 'btn btn-outline-primary btn-sm' %>
  <% end %>
  <%= link_to "Delete", gossip_comment_path(@comment.gossip_id, @comment.id), :method => "delete", :class => "btn btn-outline-danger btn-sm", :data => {:confirm => "Do you really want to Delete this gossip?"} %>
</div>